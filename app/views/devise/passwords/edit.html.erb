<% content_for :title, "Change Password" %>

<div class="row justify-content-center">
  <div class="col-lg-5 col-md-7">
    <div class="card shadow-sm">
      <div class="card-header bg-info text-white">
        <h4 class="card-title mb-0">
          <i class="bi bi-shield-lock me-2"></i>
          Change Password
        </h4>
      </div>
      <div class="card-body p-4">
        <p class="text-muted mb-4">
          <i class="bi bi-info-circle me-1"></i>
          Enter your new password below to complete the reset process.
        </p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true, class: "needs-validation", novalidate: true) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <div class="form-floating">
              <%= f.password_field :password, 
                  class: "form-control", 
                  placeholder: "New Password",
                  autofocus: true, 
                  autocomplete: "new-password",
                  required: true,
                  minlength: @minimum_password_length %>
              <%= f.label :password, "New Password *" %>
              <div class="invalid-feedback">
                Please provide a new password<% if @minimum_password_length %> (<%= @minimum_password_length %> characters minimum)<% end %>.
              </div>
              <% if @minimum_password_length %>
                <div class="form-text">
                  <i class="bi bi-info-circle me-1"></i>
                  Minimum <%= @minimum_password_length %> characters required
                </div>
              <% end %>
            </div>
          </div>

          <div class="mb-3">
            <div class="form-floating">
              <%= f.password_field :password_confirmation, 
                  class: "form-control", 
                  placeholder: "Confirm New Password",
                  autocomplete: "new-password",
                  required: true %>
              <%= f.label :password_confirmation, "Confirm New Password *" %>
              <div class="invalid-feedback">
                Please confirm your new password.
              </div>
            </div>
          </div>

          <div class="d-grid mb-3">
            <%= f.submit "Update Password", class: "btn btn-info btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
