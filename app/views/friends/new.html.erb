<% content_for :title, "New friend" %>

<% if notice %>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <i class="bi bi-info-circle me-2"></i>
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>
    <i class="bi bi-person-plus me-2"></i>
    Add New Friend
  </h1>
  <div>
    <%= link_to "Back to Friends", friends_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        <h5 class="card-title mb-0">
          <i class="bi bi-person-add me-2"></i>
          Create New Friend
        </h5>
      </div>
      <div class="card-body">
        <p class="text-muted mb-4">
          <i class="bi bi-info-circle me-1"></i>
          Fill out the form below to add a new friend to your list. Required fields are marked with an asterisk (*).
        </p>
        <%= render "form", friend: @friend %>
      </div>
    </div>
  </div>
</div>
